<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'jquery/jquery-1.4.4.min' %>
		<%= javascript_include_tag 'images' %>
		
	</head>
	
	<body <%= yield(:body) %>>
		<div class="container">
			<%= render 'layouts/header' %>
			
			<%# Render flash notifications if necessary %>
			<div class="span-24 last">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
			</div>

			<%# Display the requested page content %>
			<%= yield %>
			
			<%= render 'layouts/footer' %>
			
			<%# Show the debug information if we're in the development environment %>
			<div class="span-24 last">
				<%= debug(params) if Rails.env.development? %>
			</div>
		</div>
	</body>
</html>
